<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - Fichaje</title>
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <script src="/js/bootstrap.bundle.min.js"></script>
</head>

<body>
  <%- include('partials/menu') %>

  <div class="container mt-5">
    <div class="row">
      <div class="col-md-12">
        <h1 class="text-center">Â¡Bienvenid@, <%= empleado.nombre %> <%= empleado.apellidos %>!</h1>
        <h2 class="text-center">Registro de Fichaje</h2>
      </div>
    </div>

    <% if (mensaje) { %>
      <div class="alert alert-<%= tipoMensaje === 'success' ? 'success' : 'danger' %>" role="alert">
        <%= mensaje %>
      </div>
    <% } %>

    <div class="row mt-4">
      <div class="col-md-12">
        <div class="row my-3">
          <div class="col-md-6">
            <form action="/api/empleados/<%= empleado.id %>/registro" method="POST" id="form-entrada">
              <input type="hidden" name="tipo" value="entrada">
              <input type="hidden" name="observaciones" id="observaciones">
              <button type="submit" class="btn btn-success btn-block w-100">Registrar Entrada</button>
            </form>
          </div>
          <div class="col-md-6">
            <form action="/api/empleados/<%= empleado.id %>/registro" method="POST" id="form-salida">
              <input type="hidden" name="tipo" value="salida">
              <input type="hidden" name="observaciones" id="observaciones">
              <button type="submit" class="btn btn-danger btn-block w-100">Registrar Salida</button>
            </form>
          </div>
        </div>

        <div class="mb-3">
          <textarea class="form-control" id="observaciones-textarea" rows="3" placeholder="Observaciones..."></textarea>
        </div>
      </div>
    </div>
  </div>
</body>
<script src="/js/enviarObservaciones.js"></script>
</html>
